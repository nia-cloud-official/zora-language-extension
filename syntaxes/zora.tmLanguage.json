{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Zora Configuration",
    "patterns": [
        {
            "include": "#section-header"
        },
        {
            "include": "#key-value"
        },
        {
            "include": "#comment"
        }
    ],
    "repository": {
        "section-header": {
            "match": "\\[(.*?)\\]",
            "captures": {
                "1": {
                    "name": "keyword.section.zora"
                }
            }
        },
        "key-value": {
            "match": "\\b([^=\\s]+)\\b[\\s]*=[\\s]*(.*$)",
            "captures": {
                "1": {
                    "name": "entity.name.key.zora"
                },
                "2": {
                    "name": "string.value.zora"
                }
            }
        },
        "comment": {
            "match": "(#.*$)"
        }
    },
    "scopeName": "source.zora"
}
